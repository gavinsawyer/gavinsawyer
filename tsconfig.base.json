{
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters":       true,
    "strictInputAccessModifiers":      true,
    "strictStandalone":                true,
    "strictTemplates":                 true
  },
  "compileOnSave":          false,
  "compilerOptions":        {
    "allowSyntheticDefaultImports":       true,
    "baseUrl":                            ".",
    "emitDecoratorMetadata":              true,
    "experimentalDecorators":             true,
    "forceConsistentCasingInFileNames":   true,
    "importHelpers":                      true,
    "lib":                                [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module":                             "ESNext",
    "moduleResolution":                   "Node",
    "noFallthroughCasesInSwitch":         true,
    "noImplicitOverride":                 true,
    "noImplicitReturns":                  true,
    "noPropertyAccessFromIndexSignature": true,
    "outDir":                             "dist/out-tsc",
    "paths":                              {
      "@bowstring/cloud-functions":                      [ "libs/cloud functions/src/index.ts" ],
      "@bowstring/colors":                               [ "libs/colors/src/index.ts" ],
      "@bowstring/components":                           [ "libs/components/src/index.ts" ],
      "@bowstring/config":                               [ "libs/config/src/index.ts" ],
      "@bowstring/directives":                           [ "libs/directives/src/index.ts" ],
      "@bowstring/enums":                                [ "libs/enums/src/index.ts" ],
      "@bowstring/firebase-interop":                     [ "libs/firebase interop/src/index.ts" ],
      "@bowstring/i18n":                                 [ "libs/i18n/src/index.ts" ],
      "@bowstring/injection-tokens":                     [ "libs/injection tokens/src/index.ts" ],
      "@bowstring/interfaces":                           [ "libs/interfaces/src/index.ts" ],
      "@bowstring/pipes":                                [ "libs/pipes/src/index.ts" ],
      "@bowstring/secret-params":                        [ "libs/secret params/src/index.ts" ],
      "@bowstring/sendgrid-document-blocking-functions": [ "libs/sendgrid document blocking functions/src/index.ts" ],
      "@bowstring/services":                             [ "libs/services/src/index.ts" ],
      "@bowstring/symbols":                              [ "libs/symbols/src/index.ts" ],
      "@bowstring/types":                                [ "libs/types/src/index.ts" ],
      "@bowstring/webhook-event-functions":              [ "libs/webhook event functions/src/index.ts" ]
    },
    "resolveJsonModule":                  true,
    "rootDir":                            ".",
    "skipDefaultLibCheck":                true,
    "skipLibCheck":                       true,
    "strict":                             true,
    "target":                             "ESNext",
    "types":                              [
      "@angular/localize",
      "@types/body-scroll-lock",
      "@types/compression",
      "@types/cookie-parser",
      "@types/google.maps",
      "@types/lodash",
      "@types/masonry-layout",
      "@types/serviceworker"
    ]
  },
  "exclude":                [
    "dist",
    "node_modules",
    "temp",
    "tmp",
    "**/README.md"
  ],
  "include":                [ "!**/*.ts" ]
}
