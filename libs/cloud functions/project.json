{
  "name":        "cloud-functions",
  "$schema":     "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "tags":        [ "cloud-functions" ],
  "sourceRoot":  "libs/cloud functions/src",
  "targets":     {
    "build":           {
      "dependsOn": [ "esbuild" ],
      "executor":  "nx:noop"
    },
    "deploy":          {
      "dependsOn": [ "firebase-deploy" ],
      "executor":  "nx:noop"
    },
    "esbuild":         {
      "dependsOn": [ "eslint" ],
      "executor":  "@nx/esbuild:esbuild",
      "options":   {
        "bundle":     true,
        "external":   [
          "@gavinsawyer/shortcuts-api",
          "firebase-admin",
          "firebase-functions"
        ],
        "format":     [ "cjs" ],
        "main":       "libs/cloud functions/src/lib/main.ts",
        "metafile":   true,
        "minify":     true,
        "outputPath": "dist/libs/cloud functions",
        "platform":   "node",
        "tsConfig":   "libs/cloud functions/tsconfig.lib.json"
      },
      "outputs":   [ "{options.outputPath}" ]
    },
    "eslint":          {
      "executor": "@nx/eslint:lint",
      "options":  { "lintFilePatterns": [ "libs/cloud functions/src/**/*.ts" ] }
    },
    "firebase-deploy": {
      "dependsOn": [ "esbuild" ],
      "executor":  "nx:run-commands",
      "options":   { "command": "firebase deploy --only functions:cloud-functions" }
    },
    "lint":            {
      "dependsOn": [ "eslint" ],
      "executor":  "nx:noop"
    }
  }
}
